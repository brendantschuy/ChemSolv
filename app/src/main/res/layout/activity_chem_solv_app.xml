<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ChemSolvApp">


    <EditText
        android:id="@+id/entry"
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:hint="@string/enter_here"
        android:inputType="text"
        android:textColorHint="#AAAAAA"
        android:textSize="24sp" />

    <Button
        android:id="@+id/solve_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/solution_caption"
        android:layout_alignRight="@+id/solution_caption"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="381dp"
        android:background="#eeeeee"
        android:text="@string/solve_button" />

    <TextView
        android:id="@+id/solution_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="310dp"
        android:textSize="24sp"
        android:text="@string/solution_text_initial" />

    <TextView
        android:id="@+id/solution_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="343dp"
        android:text="@string/solution_caption" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="-193dp"
        android:layout_marginBottom="600dp"
        android:layout_toEndOf="@+id/solution_view"
        android:contentDescription="@string/logo"
        android:src="@drawable/header"/>

</RelativeLayout>